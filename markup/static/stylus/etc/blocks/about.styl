.about__content
  box-sizing border-box
  width 50%
  padding-top 50px
  padding-left 3%
  padding-right 3%
  
  background-color #f1f1f1
  
.about__content-headline
  color #4c4c4c
  
.about__content-text-wrap
  width 560px

.about__bg1
  width 50%
  
  background-image url('%=static=%content/about-bg1.jpg')
  background-repeat no-repeat
  background-size cover
  
@media(max-width 980px)
  .about
    flex-direction column
    
  .about__content
    flex-grow 1
    width auto
    padding 20px 1.724137931034483%
    
  .about__bg1
    width auto
    height 430px
    
    background-position 0 -110px
    
  .about__content-headline
    text-align left
    
  .about__content-text-wrap
    width auto
    
  .about__content-text
    text-align left
    
@media(max-width 765px)
  .about__bg1
    background-size auto 540px