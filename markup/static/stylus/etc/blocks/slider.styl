.slider
  position relative
  z-index 10
  
.slider__slide
  width 100vw
  height 100vh
  background-repeat no-repeat
  background-position center
  background-size 100vw 100vh
  &--index1
    background-image url('%=static=%content/slider-img1.jpg')
  &--index2
    background-image url('%=static=%content/slider-img2.jpg')
  &--index3
    background-image url('%=static=%content/slider-img3.jpg')
  &--services1
    background-image url('%=static=%content/slider-img1-services.jpg')
  &--services2
    background-image url('%=static=%content/slider-img2-services.jpg')
  &--about1
    background-image url('%=static=%content/slider-img1-about.jpg')
  &--about2
    background-image url('%=static=%content/slider-img2-about.jpg')
  
.slider__title
  font-family 'Great Vibes'
  font-size 34px
  font-weight 400
  color white
  
.owl-carousel.owl-loaded
  position relative
  z-index 10
  
.owl-dots
  position absolute
  left: 0;
  right: 0;
  bottom: 10%;

.owl-theme .owl-dots .owl-dot
  &:active
    outline none

.owl-theme .owl-dots .owl-dot.active
  outline none
  span
    background-color white
  
.owl-theme .owl-dots .owl-dot span
  background-color #696969
  
.slider__button
  background-color #696969
  
  transition 0.2s ease
  &:hover
    background-color #292929
    
.slider__slide-img
  width 100vw !important
  height 100vh
  
.slider__text
  span
    font-size 21px
    line-height 25px
    font-weight 700
    
.slider__list-wrap
  &--hidden
    .slider__list
      width 670px !important
      &--1
        position static
        
        visibility visible
        width auto
        height auto
        
        opacity 1
      &--2
        position absolute

        visibility hidden
        width 1px
        height 1px

        opacity 0
        
.slider__list
  width 670px !important
  min-height 110px !important
  &--1
    position absolute

    visibility hidden
    width 1px
    height 1px

    opacity 0

    transition opacity 0.8s ease
  &--2
    transition opacity 0.8s ease

.slider__list
  reset-list()
  
.slider__list-items
  font-size 16px
  line-height 19px
  color white
    
.slider__list-items
  position relative
  
  margin-bottom 10px
  padding-left 10px
  &:last-child
    margin-bottom 0
  &::before
    content ''
    
    position absolute
    top 5px
    left -5px
    
    width 5px
    height 5px
    
    background-color white
    
    border-radius 50%
  &--no-mark
    &::before
      display none
      
.slider__slide-text-block
  .container
    position relative
      
.slider__list-dropdown-button-wrap
  position absolute
  left 0
  right 0
  bottom -40px
  
  align-items center
  height 30px
  margin auto
  
  cursor pointer
    
.slider__list-dropdown-button
  position relative
  
  display block
  width 15px
  height 10px
  &::before,
  &::after
    center-absolute()
    
    content ''
    
    width 60%
    height 1px
    
    background-color white
  &::before
    left -5px
    
    transform rotate(45deg)
  &::after
    right -6px
    
    transform rotate(-45deg)
  
@media(max-width 1300px)
  .slider__slide
    .container
      box-sizing border-box
      width 100%
  
  .owl-dots
    bottom: 70px
    
@media(max-width 1070px)
  .slider__headline
    font-size 30px
    line-height 33px
    
  .slider__title
    margin-bottom 10px !important
    
    font-size 30px
    line-height 33px
    
@media(max-width 990px)
  .owl-dots
    bottom 5%
    
@media(max-width 480px)
  .slider__list-wrap
    &--hidden
      .slider__list
        width auto !important
        
  .slider__list
    width auto !important
  
  .slider__text
    span
      font-size 19px
      line-height 24px
  
  .slider__title
    span
      display none
      
  .slider__list-wrap
    padding 0 10px
    
@media(max-width 420px)
  .slider__slide
    height 85.597826086956522vh
    &--index1
      background-image url('%=static=%content/slider-img1-mobile.jpg')
    &--index3
      background-image url('%=static=%content/slider-img3-mobile.jpg')
    &--services1
      background-image url('%=static=%content/slider-img1-services-mobile.jpg')
    &--services2
      background-image url('%=static=%content/slider-img2-services-mobile.jpg')
    &--about1
      background-image url('%=static=%content/slider-img1-about-mobile.jpg')
    &--about2
      background-image url('%=static=%content/slider-img2-about-mobile.jpg')
    
  .slider__headline
    margin-bottom 15px !important
    
    font-size 23px !important
    line-height 26px
    
  .slider__title
    font-size 24px
    line-height 27px
    
  .slider__list-dropdown-button-wrap
    display none
    
  .owl-dots
    bottom 1%
    
@media(max-width 375px)
  .slider__slide
    height 84.107946026986507vh
  
  .slider__headline
    margin-bottom: 15px !important
    margin-top: 20px;
    
    font-size: 25px;
    
  .slider__text
    font-size: 15px;
    margin-bottom: 10px !important
      
@media(max-width 360px)
  .owl-dots
    bottom 10%